body {
  width: auto;
}

.ay {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 100px;
  opacity: 1;
  color: #121a27;
  padding-bottom: 100px;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.ay h2 {
  font-family: "Text-bold";
  font-size: 3vw;
  color: #3e3e3e;
}
.ay p {
  font-size: 1.2em;
}

.ay.hidden {
  opacity: 0;
}

header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}
header p {
  width: 50%;
}
header h1 {
  font-family: "Text-titre";
  font-size: 5vw;
  margin: 0;
}

.campement {
  margin: 50px;
}
.campement div {
  margin-top: 150px;
  position: relative;
}
.campement div img {
  width: 100%;
}
.campement .img-arrive {
  width: 70vw;
}
.campement .img-campement {
  display: flex;
  justify-content: space-between;
}
.campement .img-campement img {
  width: 30vw;
}
.campement .chien {
  left: 100%;
  transform: translateX(-100%);
  width: 60vw;
}
.campement .frigo {
  width: 45vw;
}
.campement .beurre {
  margin-top: -200px;
  left: 100%;
  transform: translateX(-100%);
  width: 40vw;
}

.view {
  width: 10px;
  height: 100%;
  background-color: teal;
  position: absolute;
  right: 30px;
  top: 200px;
}
.view .indice {
  position: relative;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: brown;
  top: 0;
  left: 0;
}