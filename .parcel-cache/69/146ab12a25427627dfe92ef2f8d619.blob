@font-face {
  font-family: "Text-menu";
  src: url("469c4356b412ab8915cdeddf66dda4fd");
}
.menu {
  position: absolute;
  top: 0;
  width: 100vw;
  background-color: white;
  color: #121a27;
}
.reportage {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 150px;
  height: 110vh;
}
.reportage h1 {
  display: flex;
  font-family: "Text-menu";
  font-size: 5vw;
  margin: 0 10px 0 0;
  padding-left: 20px;
  border-bottom: solid 1px #121a27;
  transition: all 0.2s;
  text-align: left;
  width: 90%;
}
.reportage h1:hover {
  background-color: #121a27;
  color: white;
  cursor: pointer;
}