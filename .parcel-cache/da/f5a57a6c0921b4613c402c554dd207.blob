// onClick
const itemMenu = document.querySelector('.item-menu');
const itemRaconte = document.querySelector('.item_nav_index');
const loader = document.querySelector('.loader');
const menu = document.querySelector('.menu');
itemRaconte.onclick = function () {
  loader.classList.add('open');
  menu.classList.add('hidden');
  setTimeout(() => {
    window.location.replace("../index.html");
  }, 1000);
};
// Image hover
const reportage = document.querySelector('.reportage').children[0];
const frontImg = document.querySelector('.front-img').children[0];
reportage.onmouseover = function () {
  frontImg.classList.add('open');
};
reportage.onmouseout = function () {
  frontImg.classList.remove('open');
};
