.about {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 100px;
  background-color: white;
  color: #121a27;
  margin-bottom: 100px;
}
.about h1 {
  font-family: "Text-titre";
  font-size: 3vw;
}
.about h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  color: #3e3e3e;
}
.about p {
  font-size: 1.2vw;
}

.about.hidden {
  display: none;
}

.info {
  display: flex;
  flex-direction: column;
}
.info h1 {
  width: 70%;
}
.info .header {
  display: inline-flex;
  justify-content: space-between;
}
.info .header h2 {
  width: 35%;
}
.info .header .img-about img {
  position: relative;
  top: -12vw;
  width: 60vw;
}
.info .header .img-about p {
  position: absolute;
  top: 30%;
  left: -150px;
  width: 150px;
  font-size: 1vw;
}
.info .header .img-about p span {
  position: absolute;
  font-size: 2em;
  top: 45%;
  margin-left: 30%;
}

.noe-about {
  display: flex;
  flex-direction: column;
  position: relative;
  top: -18vw;
}
.noe-about .info-noe {
  display: flex;
  justify-content: space-around;
}
.noe-about .info-noe .img-abeille {
  position: relative;
  top: -2vw;
}
.noe-about .info-noe .img-abeille img {
  width: 50vw;
}
.noe-about .info-noe .img-abeille p {
  position: absolute;
  top: 85%;
  left: 40%;
  width: 150px;
  font-size: 1vw;
}
.noe-about .info-noe .img-abeille p span {
  position: absolute;
  font-size: 2em;
  top: 0;
  margin-left: 15px;
}
.noe-about .info-noe article {
  display: flex;
  flex-direction: column;
  width: 35%;
}

.rapp {
  position: relative;
  top: -22vw;
}

.contact {
  position: relative;
  top: -26vw;
}
.contact a {
  color: black;
  transition: color 0.2s;
}
.contact a:hover {
  color: #b4630e;
}

@media all and (max-device-width: 480px) {
  .about {
    top: 100px;
    align-items: center;
    display: flex;
    width: 100vw;
    margin: 0;
  }
  .about h1 {
    font-size: 7vw;
    width: 100%;
  }
  .about h2 {
    font-size: 4.2vw;
  }
  .about p {
    font-size: 3.4vw;
  }

  .info {
    width: 95%;
    margin: 0;
  }
  .info .header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .info .header h2 {
    width: 100%;
  }
  .info .header .img-about {
    position: relative;
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
  }
  .info .header .img-about img {
    position: relative;
    top: 0;
    width: 70%;
  }
  .info .header .img-about p {
    position: relative;
    top: 0;
    left: 0;
    width: 20%;
    font-size: 3vw;
  }
  .info .header .img-about p span {
    position: absolute;
    font-size: 2em;
    top: 45%;
    margin-left: 30%;
  }

  .noe-about {
    width: 95%;
    top: 20px;
  }
  .noe-about .info-noe {
    display: flex;
    flex-direction: column-reverse;
  }
  .noe-about .info-noe .img-abeille {
    top: 10vw;
  }
  .noe-about .info-noe .img-abeille img {
    width: 100%;
  }
  .noe-about .info-noe .img-abeille p {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    font-size: 3vw;
  }
  .noe-about .info-noe .img-abeille p span {
    font-size: 2em;
  }
  .noe-about .info-noe article {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .rapp, .contact {
    top: 100px;
    width: 95%;
  }

  .contact {
    padding-bottom: 50px;
  }
}