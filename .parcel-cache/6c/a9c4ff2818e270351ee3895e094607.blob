aside {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0);
  height: 7vh;
  position: fixed;
  top: 0;
  z-index: 90;
  width: 100%;
}
aside a {
  font-family: "Text";
  color: white;
  text-decoration: none;
}
aside a:hover {
  cursor: pointer;
}

.navbar.white a {
  color: #121a27;
}

a {
  position: relative;
  margin-left: 30px;
  margin-right: 30px;
  background-color: brown;
}

.item-menu.open::before, .item-about::before, .item_nav_index {
  position: absolute;
  content: "";
  display: block;
  top: 100%;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: #121a27;
}

.item-about::before, .item_nav_index::before {
  width: 0;
  transition: width 0.3s;
}

.item-about:hover::before, .item_nav_index:hover::before {
  width: 100%;
}

.item_nav_index {
  position: absolute;
  left: 30px;
}