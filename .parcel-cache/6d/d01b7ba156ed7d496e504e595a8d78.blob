@charset "UTF-8";
.desc-right {
  position: absolute;
  top: 50%;
  right: -220px;
  width: 200px;
  transform: translateY(-50%);
}
.desc-right::after {
  content: "←";
  display: block;
  font-size: 2em;
  position: absolute;
}

.desc-top {
  position: absolute;
  bottom: 100%;
  left: 50%;
  width: 200px;
  transform: translateX(-25%);
}
.desc-top::after {
  content: "↓";
  display: block;
  font-size: 2em;
  position: absolute;
  bottom: -10px;
  left: -40px;
}

.desc-bottom {
  position: absolute;
  top: 100%;
  left: 50%;
  width: 200px;
  transform: translateX(-25%);
}
.desc-bottom::after {
  content: "↑";
  display: block;
  font-size: 2em;
  position: absolute;
  top: -10px;
  left: -40px;
}

.desc-left {
  position: absolute;
  top: 50%;
  left: -220px;
  width: 200px;
  transform: translateY(-50%);
  text-align: right;
}
.desc-left::after {
  content: "→";
  display: block;
  font-size: 2em;
  position: absolute;
  right: 0;
}