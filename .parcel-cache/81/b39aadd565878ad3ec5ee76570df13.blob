.about {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
}

.about.hidden {
  opacity: 0;
}

.info {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
}
.info h1 {
  font-family: "Text-menu";
  font-size: 3vw;
  width: 70%;
}
.info .header {
  display: inline-flex;
  justify-content: space-between;
}
.info .header h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  width: 35%;
  color: #575758;
}
.info .header img {
  position: relative;
  top: -150px;
  width: 60vw;
}