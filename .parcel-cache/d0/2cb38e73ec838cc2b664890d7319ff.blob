.ay {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 100px;
  opacity: 1;
  color: #121a27;
  padding-bottom: 100px;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.ay h2 {
  font-family: "Text-bold";
  font-size: 3vw;
  color: #3e3e3e;
}
.ay p {
  font-size: 1.2em;
}

.ay.hidden {
  opacity: 0;
}

header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}
header p {
  width: 50%;
}
header h1 {
  font-family: "Text-titre";
  font-size: 5vw;
  margin: 0;
}

.desc-right {
  position: absolute;
  font-size: 1em;
  top: 50%;
  right: 0;
  width: 200px;
  background-color: brown;
  transform: translateY(-50%);
}

.campement {
  margin: 50px;
}
.campement .img-arrive {
  position: relative;
  display: flex;
  background-color: teal;
  width: 70vw;
}
.campement .img-arrive img {
  width: 70vw;
}