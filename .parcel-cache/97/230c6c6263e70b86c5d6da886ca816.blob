@font-face {
  font-family: "Text-menu";
  src: url("../fonts/Anton/Anton-Regular.ttf");
}
.menu {
  background-color: white;
  opacity: 1;
  width: 100vw;
  color: #121a27;
}

.reportage {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 150px;
  text-align: left;
}
.reportage h1 {
  font-family: "Text-menu";
  font-size: 5vw;
  margin: 0 10px 0 15%;
  padding-left: 20px;
  border-bottom: solid 1px #121a27;
  width: 100%;
  transition: all 0.4s;
}
.reportage h1:hover {
  background-color: #121a27;
  color: white;
  cursor: pointer;
}