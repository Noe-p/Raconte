.about {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.about h1 {
  font-family: "Text-titre";
  font-size: 3vw;
}
.about h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  color: #3e3e3e;
}
.about p {
  font-size: 1.2vw;
}

.about.hidden {
  opacity: 0;
  top: 150px;
}

.info {
  padding-top: 100px;
  display: flex;
  flex-direction: column;
}
.info h1 {
  width: 70%;
}
.info .header {
  display: inline-flex;
  justify-content: space-between;
}
.info .header h2 {
  width: 35%;
}
.info .header .img-about img {
  position: relative;
  top: -12vw;
  width: 60vw;
}
.info .header .img-about p {
  position: absolute;
  top: 30%;
  left: -150px;
  width: 150px;
  font-size: 1vw;
}
.info .header .img-about p span {
  position: absolute;
  font-size: 2em;
  top: 45%;
  margin-left: 30%;
}

.noe-about {
  display: flex;
  flex-direction: column;
  position: relative;
  top: -18vw;
}
.noe-about .info-noe {
  display: flex;
  justify-content: space-around;
}
.noe-about .info-noe .img-abeille {
  position: relative;
  top: -2vw;
}
.noe-about .info-noe .img-abeille img {
  width: 50vw;
}
.noe-about .info-noe .img-abeille p {
  position: absolute;
  top: 95%;
  left: 40%;
  width: 150px;
  font-size: 1vw;
}
.noe-about .info-noe .img-abeille p span {
  position: absolute;
  font-size: 2em;
  top: 0;
  margin-left: 15px;
}
.noe-about .info-noe article {
  display: flex;
  flex-direction: column;
  width: 35%;
}

@media all and (max-device-width: 480px) {
  .navbar {
    font-size: 2.7em;
  }
  .navbar .item_nav_left {
    display: inline-flex;
  }
  .navbar .item_nav_left a {
    margin-left: 50px;
  }

  .about {
    display: flex;
    width: 100vw;
  }
  .about h1 {
    font-size: 6vw;
  }
  .about h2 {
    font-size: 4.2vw;
  }
  .about p {
    font-size: 2vw;
  }

  .info {
    padding-top: 200px;
    width: 95%;
  }
  .info h1 {
    width: 100%;
  }
  .info .header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .info .header h2 {
    width: 100%;
  }
  .info .header .img-about {
    position: relative;
    margin-top: 100px;
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-around;
    align-items: center;
  }
  .info .header .img-about img {
    position: relative;
    top: 0;
    width: 70%;
  }
  .info .header .img-about p {
    position: relative;
    top: 0%;
    left: 0;
    width: auto;
    font-size: 3vw;
  }
  .info .header .img-about p span {
    position: absolute;
    font-size: 2em;
    top: 45%;
    margin-left: 30%;
  }
}
.noe-about {
  top: 100px;
}
.noe-about .info-noe {
  display: flex;
  flex-direction: column-reverse;
}
.noe-about .info-noe .img-abeille {
  top: 0vw;
}
.noe-about .info-noe .img-abeille img {
  width: 95%;
}
.noe-about .info-noe .img-abeille p {
  position: absolute;
  top: 95%;
  left: 40%;
  width: 150px;
  font-size: 1vw;
}
.noe-about .info-noe .img-abeille p span {
  position: absolute;
  font-size: 2em;
  top: 0;
  margin-left: 15px;
}
.noe-about .info-noe article {
  display: flex;
  flex-direction: column;
  width: 100%;
}