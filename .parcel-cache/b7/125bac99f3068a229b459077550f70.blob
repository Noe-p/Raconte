.about {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
  transition: all 1s;
  transition-delay: 0.3s;
}

.about.hidden {
  opacity: 0;
  top: 100px;
}

.info {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  align-items: center;
  flex-direction: column;
}