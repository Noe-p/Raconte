.menu {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}

.menu.hidden {
  opacity: 0;
  top: 150px;
}

.reportage {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.reportage h1 {
  font-family: "Text-titre";
  font-size: 5vw;
  margin: 0 10px 0 0;
  padding-left: 20px;
  border-bottom: solid 1px #121a27;
  text-align: left;
  width: 90%;
  transition: all 0.3s;
}
.reportage h1:hover {
  background-color: #121a27;
  color: white;
  cursor: pointer;
}

.front-img img {
  position: absolute;
  opacity: 0;
  width: 400px;
  transition: opacity 0.5s;
}
.front-img img.open {
  opacity: 1;
}

@media all and (max-device-width: 480px) {
  .menu {
    width: 100vw;
    display: flex;
  }

  .reportage {
    padding-top: 300px;
    padding-bottom: 100px;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .reportage h1 {
    font-family: "Text-titre";
    font-size: 4em;
    margin: 0 10px 0 0;
    padding-left: 20px;
    text-align: left;
    width: 95%;
    transition: all 0.3s;
  }

  .front-img {
    display: none;
  }
}
