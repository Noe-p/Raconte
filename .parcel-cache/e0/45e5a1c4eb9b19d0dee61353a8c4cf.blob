.ay {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 100px;
  opacity: 1;
  color: #121a27;
  padding-bottom: 100px;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.ay h2 {
  font-family: "Text-bold";
  font-size: 3vw;
  color: #3e3e3e;
}
.ay p {
  font-size: 1.2em;
}

.ay.hidden {
  opacity: 0;
}

header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}
header p {
  width: 50%;
}
header h1 {
  font-family: "Text-titre";
  font-size: 5vw;
  margin: 0;
}

.campement {
  margin: 50px;
}
.campement .img-arrive {
  position: relative;
  width: 70vw;
}
.campement .img-arrive img {
  width: 100%;
}
.campement .img-campement {
  margin-top: 150px;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.campement .img-campement img {
  width: 30vw;
}
.campement .chien {
  margin-top: 150px;
  position: relative;
  left: 100%;
  transform: translateX(-100%);
  width: 60vw;
}
.campement .chien img {
  width: 100%;
}
.campement .frigo {
  margin-top: 150px;
  position: relative;
}
.campement .frigo img {
  width: 45vw;
}