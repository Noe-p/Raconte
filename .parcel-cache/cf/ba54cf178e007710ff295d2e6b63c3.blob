aside {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #121a27;
  height: 7vh;
  background-color: teal;
  position: absolute;
}

a {
  font-family: "Text";
  color: white;
  text-decoration: none;
  margin-left: 15px;
  margin-right: 15px;
}

.item_nav_left {
  position: relative;
  display: flex;
}
.item_nav_left .item-menu::before {
  position: absolute;
  content: "";
  display: block;
  height: 0;
  width: 45%;
  transform: translate(-17px, -25px);
  border: solid 0px white;
  transition: all 0.2s;
}
.item_nav_left .item-menu:hover::before {
  height: 70px;
  border: solid 1px white;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  border-top: none;
}

.item_nav_index {
  position: absolute;
  left: 10px;
}