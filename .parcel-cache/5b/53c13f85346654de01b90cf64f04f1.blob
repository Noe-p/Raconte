.about {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
}

.about.hidden {
  opacity: 0;
}

.info {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.info h1 {
  font-family: "Text-menu";
  font-size: 3vw;
}
.info h2 {
  font-family: "Text-bold";
  font-size: 2vw;
}