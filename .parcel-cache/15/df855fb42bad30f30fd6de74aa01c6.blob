.ay {
  display: block;
  position: relative;
  top: 50px;
  opacity: 1;
  padding-bottom: 100px;
  background-color: white;
  color: #121a27;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.ay h1 {
  font-family: "Text-titre";
  font-size: 4vw;
  margin-left: 50px;
}
.ay h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  color: #3e3e3e;
}
.ay p {
  font-size: 1.2vw;
}

.ay.hidden {
  opacity: 0;
  top: 150px;
}

.Campement {
  margin: 10px;
}