.about {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
}

.about.hidden {
  opacity: 0;
}

.info {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
}
.info h1 {
  font-family: "Text-titre";
  font-size: 3vw;
  width: 70%;
}
.info .header {
  display: inline-flex;
  justify-content: space-between;
}
.info .header h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  width: 35%;
  color: #3e3e3e;
}
.info .header img {
  position: relative;
  top: -150px;
  width: 60vw;
}

@media all and (max-device-width: 480px) {
  .navbar {
    font-size: 2.7em;
  }
  .navbar .item_nav_left {
    display: inline-flex;
  }
  .navbar .item_nav_left a {
    margin-left: 50px;
  }

  .about {
    display: flex;
    width: 100vw;
  }

  .info {
    padding-top: 200px;
  }
  .info h1 {
    font-family: "Text-titre";
    font-size: 5em;
    width: 95%;
  }
  .info .header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 95%;
  }
  .info .header h2 {
    font-family: "Text-bold";
    font-size: 1.5vw;
    width: 35%;
    color: #3e3e3e;
  }
  .info .header img {
    position: relative;
    top: 0;
    width: 60vw;
  }
}