.about {
  display: block;
  position: absolute;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
}

.about.hidden {
  opacity: 0;
}

.info {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
}
.info h1 {
  font-family: "Text-menu";
  font-size: 3vw;
  width: 70%;
}
.info h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  width: 30%;
}
.info .image {
  top: 0%;
  position: relative;
  right: 20px;
}
.info .image img {
  width: 60vw;
}
