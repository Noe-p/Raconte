html, body {
  overflow-y: scroll;
  scrollbar-width: none;
  overflow-x: hidden;
  scroll-behavior: smooth;
}

body::-webkit-scrollbar {
  display: none;
}

.ay {
  display: flex;
  flex-direction: column;
  position: relative;
  padding-top: 100px;
  opacity: 1;
  color: #121a27;
  padding-bottom: 100px;
  z-index: 1000px;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}
.ay h2 {
  font-family: "Text-bold";
  font-size: 3vw;
  color: #3e3e3e;
}
.ay p {
  font-size: 1.2em;
}

.ay.hidden {
  opacity: 0;
}

header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;
}
header p {
  width: 50%;
}
header h1 {
  font-family: "Text-titre";
  font-size: 5vw;
  margin: 0;
}

.campement {
  margin: 50px;
}
.campement div {
  margin-top: 100px;
  position: relative;
}
.campement div img {
  width: 100%;
}
.campement .img-arrive {
  width: 70vw;
}
.campement .img-campement {
  display: flex;
  justify-content: space-between;
}
.campement .img-campement img {
  width: 30vw;
}
.campement .chien {
  left: 100%;
  transform: translateX(-100%);
  width: 60vw;
}
.campement .frigo {
  width: 45vw;
}
.campement .beurre {
  margin-top: -200px;
  left: 100%;
  transform: translateX(-100%);
  width: 40vw;
}

.scrollBar {
  width: 200px;
  height: 2px;
  background-color: black;
  position: fixed;
  right: 25px;
  top: 20px;
  z-index: 90;
}
.scrollBar .cursor {
  position: relative;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: solid 1px black;
  top: -15px;
  left: 0;
  transform: translateX(-50%);
}
.scrollBar .cursor::after {
  content: "";
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: orange;
}
.scrollBar a::after {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  top: -4px;
  left: 0;
  transform: translateX(-50%);
  background-color: black;
  transition: all 0.2s;
}
.scrollBar a::after:hover {
  width: 12px;
  height: 12px;
  top: -5px;
}
