aside {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #121a27;
  height: 7vh;
  padding: 10px 3vw 0 3vw;
}

a {
  font-family: "Text";
  color: white;
  text-decoration: none;
  margin-left: 15px;
  margin-right: 15px;
  background-color: teal;
}

.item_nav_left {
  position: relative;
}

.item-menu::before {
  position: absolute;
  content: "";
  display: block;
  width: 50%;
  height: 100px;
  background-color: white;
}

.item_nav_index {
  position: absolute;
  left: 10px;
}