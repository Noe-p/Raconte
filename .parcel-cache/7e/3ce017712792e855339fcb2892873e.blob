.about {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
  transition: all 1s ease-out;
  transition-delay: 0.3s;
}

.about.hidden {
  opacity: 0;
  top: 150px;
}

.info {
  padding-top: 100px;
  display: flex;
  flex-direction: column;
}
.info h1 {
  font-family: "Text-titre";
  font-size: 3vw;
  width: 70%;
}
.info .header {
  display: inline-flex;
  justify-content: space-between;
}
.info .header h2 {
  font-family: "Text-bold";
  font-size: 1.5vw;
  width: 35%;
  color: #3e3e3e;
}
.info .header .img-about img {
  position: relative;
  top: -220px;
  width: 60vw;
}
.info .header .img-about p {
  position: absolute;
  top: 30%;
  left: -150px;
  width: 150px;
  background-color: eal;
}
.info .header .img-about p span {
  position: absolute;
  font-size: 2em;
  top: 45%;
  margin-left: 30%;
}

.noe-about {
  display: flex;
  background-color: teal;
  position: relative;
  top: -300px;
}
.noe-about h1 {
  font-family: "Text-titre";
  font-size: 3vw;
}
.noe-about .img-abeille img {
  position: relative;
  top: 100px;
  left: -21vw;
  width: 60vw;
}

@media all and (max-device-width: 480px) {
  .navbar {
    font-size: 2.7em;
  }
  .navbar .item_nav_left {
    display: inline-flex;
  }
  .navbar .item_nav_left a {
    margin-left: 50px;
  }

  .about {
    display: flex;
    width: 100vw;
  }

  .info {
    padding-top: 200px;
    width: 95%;
  }
  .info h1 {
    font-family: "Text-titre";
    font-size: 5em;
    width: 100%;
  }
  .info .header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .info .header h2 {
    font-family: "Text-bold";
    font-size: 4.2vw;
    width: 100%;
    color: #3e3e3e;
  }
  .info .header img {
    margin-top: 50px;
    position: relative;
    top: 0;
    width: 100%;
  }
}