@font-face {
  font-family: "Text-menu";
  src: url("469c4356b412ab8915cdeddf66dda4fd");
}
.menu {
  display: block;
  position: relative;
  top: 0;
  opacity: 1;
  background-color: white;
  color: #121a27;
  transition: all 1s;
  transition-delay: 0.3s;
}
.menu.hidden {
  opacity: 0;
  top: 100px;
}
.reportage {
  padding-top: 100px;
  padding-bottom: 100px;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.reportage h1 {
  font-family: "Text-menu";
  font-size: 5vw;
  margin: 0 10px 0 0;
  padding-left: 20px;
  border-bottom: solid 1px #121a27;
  text-align: left;
  width: 90%;
}
.reportage h1:hover {
  background-color: #121a27;
  color: white;
  cursor: url("a2911b52a2f7bef4e7e20b1a218a78fe"), auto;
}
.front-img img {
  opacity: 0;
}
.front-img img.open {
  opacity: 1;
}