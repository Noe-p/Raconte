@font-face {
  font-family: "Titre";
  src: url("../fonts/Viaoda_Libre/ViaodaLibre-Regular.ttf");
}
@font-face {
  font-family: "Text-bold";
  src: url("../fonts/Montserrat/Montserrat-Black.ttf");
}
@font-face {
  font-family: "Text-regular";
  src: url("../fonts/Roboto/Roboto-Regular.ttf");
}
@font-face {
  font-family: "Text";
  src: url("../fonts/Montserrat/Montserrat-Regular.ttf");
}
body {
  margin: 0;
  padding: 0;
  font-size: 1em;
  font-family: "Text";
}

.navbar.hidden, .content.hidden {
  opacity: 0;
  z-index: -10;
  transition-delay: 1s;
}

.stickman.hidden {
  display: none;
}

.menu.hidden {
  top: -105%;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
  display: none;
}

.loader {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 100;
  opacity: 1;
}
.loader h1 {
  color: black;
  font-family: "Titre";
  font-size: 10vw;
  display: block;
  letter-spacing: -1vw;
}
.loader h1 span {
  animation-name: letter-wave;
  animation-iteration-count: infinite;
  animation-duration: 4s;
  position: relative;
  top: 0;
  opacity: 1;
}
.loader h1 span:nth-child(2) {
  animation-delay: 0.2s;
}
.loader h1 span:nth-child(3) {
  animation-delay: 0.4s;
}
.loader h1 span:nth-child(4) {
  animation-delay: 0.6s;
}
.loader h1 span:nth-child(5) {
  animation-delay: 0.8s;
}
.loader h1 span:nth-child(6) {
  animation-delay: 1s;
}
.loader h1 span:nth-child(7) {
  animation-delay: 1.2s;
}
@keyframes letter-wave {
  10% {
    top: -25%;
  }
  20% {
    top: 0;
  }
}

.loader.hidden {
  opacity: 0;
  transform: translate(100%, -100%);
  animation-name: loader-end;
  animation-duration: 1s;
  animation-timing-function: ease-in;
}

@keyframes loader-end {
  0% {
    transform: translate(0, 0);
    opacity: 1;
    z-index: 100;
    border-radius: 0;
  }
  100% {
    transform: translateY(-100%);
    opacity: 1;
    z-index: 100;
    border-bottom-left-radius: 100%;
    border-bottom-right-radius: 100%;
  }
}