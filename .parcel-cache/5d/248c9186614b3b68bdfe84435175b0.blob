aside {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #121a27;
  height: 7vh;
  padding: 10px 3vw 0 3vw;
}

a {
  font-family: "Text";
  color: white;
  text-decoration: none;
  padding-left: 15px;
  padding-right: 15px;
}

.item_nav_left {
  display: inline-flex;
  position: relative;
}
.item_nav_left a::after {
  position: absolute;
  content: "";
  display: block;
  width: 100%;
  height: 30px;
  background-color: white;
}

.item_nav_index {
  position: absolute;
  left: 10px;
}